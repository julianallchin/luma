{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "luma",
	"version": "0.1.0",
	"identifier": "com.luma.luma",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"macOSPrivateApi": true,
		"windows": [
			{
				"label": "main",
				"width": 1100,
				"height": 800,
				"decorations": true,
				"transparent": false,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"dragDropEnabled": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [
			"python-runtime/*",
			"../resources/fixtures/**/*"
		]
	}
}
